<style>
  .bd-placeholder-img {
    font-size: 1.125rem;
    text-anchor: middle;
  }
  @media (min-width: 768px) {
    .bd-placeholder-img-lg {
      font-size: 3.5rem;
    }
  }
</style>

<div class="p-4 col-md-6 mx-auto formulario">
  <form action="/login" method="POST">
    <div class="text-center mb-4">
      <h1 class="titulo">Piel En Bandeja</h1>
      <p class="mt-4 subtitulo">{{subtitulo}}</p>
    </div>

    <div class="form-label-group mt-4 col-md-6 col-xs-12 mx-auto">
      <input type="email" class="form-control" name="user_email" placeholder="Dirección e-mail"
        value="{{user_email}}" autofocus required>
    </div>

    <div class="form-label-group mt-4 col-md-6 col-xs-12 mx-auto">
      <input type="password" id="inputPassword" class="form-control" name="user_pass" placeholder="Contraseña">
    </div>
    <button class="btn btn-lg btn-info btn-block mt-4 col-md-6 col-xs-12 mx-auto" type="submit">Accede</button>
  </form>
</div>